{
  "schema": "PPI_POLICY_BUNDLE_V1",
  "policy_key": "DEFAULT_GOVERNANCE",
  "policy_version": "v1",
  "conflict_mode": "DENY_ON_CONFLICT",
  "rules": [
    {
      "rule_key": "deny_missing_context_default",
      "when": {
        "proposed_action": "*",
        "capabilities_required": ["CAP_PROPOSE_ACTION"],
        "context_required_keys": ["target_id"]
      },
      "then": {
        "decision": "DENY",
        "reason_codes": ["DENY_MISSING_CONTEXT"]
      }
    }
  ]
}
