{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "PPI_STATE_MACHINE_V1",
  "title": "PPI State Machine V1",
  "type": "object",
  "required": ["machine_id", "version", "states", "transitions", "terminal_states"],
  "properties": {
    "machine_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },

    "states": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },

    "terminal_states": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },

    "transitions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["from", "to", "on"],
        "properties": {
          "from": { "type": "string", "minLength": 1 },
          "to": { "type": "string", "minLength": 1 },
          "on": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
