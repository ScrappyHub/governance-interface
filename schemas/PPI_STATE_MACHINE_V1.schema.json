{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PPI_STATE_MACHINE_V1",
  "type": "object",
  "required": [
    "schema",
    "states",
    "initial_state",
    "terminal_states",
    "transitions"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "PPI_STATE_MACHINE_V1"
    },
    "states": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "initial_state": { "type": "string" },
    "terminal_states": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "transitions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["from", "to", "on_decision"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "on_decision": {
            "type": "string",
            "enum": ["ALLOW", "DENY", "ESCALATE", "REQUIRE_ATTESTATION"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
