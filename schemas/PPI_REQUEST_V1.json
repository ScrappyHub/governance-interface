{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PPI_REQUEST_V1",
  "type": "object",
  "required": [
    "request_id",
    "actor_id",
    "proposed_action",
    "capabilities",
    "policy_version"
  ],
  "properties": {
    "request_id": {
      "type": "string",
      "description": "Caller-provided unique identifier"
    },
    "actor_id": {
      "type": "string",
      "description": "Identifier of proposing entity"
    },
    "proposed_action": {
      "type": "string",
      "description": "Declarative action label"
    },
    "capabilities": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "context": {
      "type": "object",
      "additionalProperties": true
    },
    "policy_version": {
      "type": "string",
      "description": "Pinned policy bundle version"
    }
  },
  "additionalProperties": false
}
