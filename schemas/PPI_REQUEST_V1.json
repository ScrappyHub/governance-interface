{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "PPI_REQUEST_V1",
  "title": "PPI Request V1",
  "type": "object",
  "required": ["request_id", "policy_version", "actor", "action", "declared_context", "created_at"],
  "properties": {
    "request_id": { "type": "string", "minLength": 8 },
    "created_at": { "type": "string", "format": "date-time" },

    "policy_version": { "type": "string", "minLength": 1 },

    "actor": {
      "type": "object",
      "required": ["actor_id", "actor_kind"],
      "properties": {
        "actor_id": { "type": "string", "minLength": 1 },
        "actor_kind": { "type": "string", "enum": ["human", "service", "system", "model"] }
      },
      "additionalProperties": false
    },

    "action": {
      "type": "object",
      "required": ["action_kind", "target", "requested_capabilities"],
      "properties": {
        "action_kind": { "type": "string", "minLength": 1 },
        "target": { "type": "string", "minLength": 1 },
        "requested_capabilities": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },

    "declared_context": {
      "type": "object",
      "description": "Declarative context only. No inference. Missing keys must cause DENY where required by policy.",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
