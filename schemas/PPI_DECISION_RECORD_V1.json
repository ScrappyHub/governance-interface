{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PPI_DECISION_RECORD_V1",
  "type": "object",
  "required": [
    "decision_id",
    "request_id",
    "decision",
    "reason_codes",
    "policy_version",
    "policy_hash_sha256",
    "engine_version",
    "evaluated_at"
  ],
  "properties": {
    "decision_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "decision": {
      "type": "string",
      "enum": ["ALLOW", "DENY", "ESCALATE", "REQUIRE_ATTESTATION"]
    },
    "reason_codes": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "rule_path": {
      "type": "array",
      "items": { "type": "string" }
    },
    "policy_version": {
      "type": "string"
    },
    "policy_hash_sha256": {
      "type": "string"
    },
    "engine_version": {
      "type": "string"
    },
    "evaluated_at": {
      "type": "string",
      "format": "date-time"
    },
    "prior_record_hash_sha256": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
