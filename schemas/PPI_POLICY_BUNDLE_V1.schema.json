{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "PPI_POLICY_BUNDLE_V1",
  "title": "PPI Policy Bundle V1",
  "type": "object",
  "required": ["policy_id", "policy_version", "created_at", "rules", "conflict_resolution"],
  "properties": {
    "policy_id": { "type": "string", "minLength": 1 },
    "policy_version": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },

    "description": { "type": "string" },

    "rules": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "PPI_RULE_NODE_V1.schema.json" }
    },

    "conflict_resolution": {
      "type": "object",
      "required": ["mode"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["deny_on_conflict", "explicit_priority_only"]
        },
        "priority_order": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Explicit rule_id ordering, used only when mode=explicit_priority_only."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
