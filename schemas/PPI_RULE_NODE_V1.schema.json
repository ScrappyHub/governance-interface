{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PPI_RULE_NODE_V1",
  "type": "object",
  "required": [
    "rule_key",
    "when",
    "then"
  ],
  "properties": {
    "rule_key": {
      "type": "string",
      "description": "Stable identifier for this rule node"
    },
    "when": {
      "type": "object",
      "required": ["proposed_action", "capabilities_required", "context_required_keys"],
      "properties": {
        "proposed_action": { "type": "string" },
        "capabilities_required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "context_required_keys": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Missing any key => DENY (no enrichment permitted)."
        }
      },
      "additionalProperties": false
    },
    "then": {
      "type": "object",
      "required": ["decision", "reason_codes"],
      "properties": {
        "decision": {
          "type": "string",
          "enum": ["ALLOW", "DENY", "ESCALATE", "REQUIRE_ATTESTATION"]
        },
        "reason_codes": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
